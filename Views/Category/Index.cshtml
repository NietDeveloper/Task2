@model List<Category>
<div>
    <a type="button" class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>
    <table class="table table-striped table-bordered text-center mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@(category.Type == 1 ? "Income" : "Outcome")</td>
                    <td>
                        <a type="button" asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <a type="button" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger">Delitet</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>