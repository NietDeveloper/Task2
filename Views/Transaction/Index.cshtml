@model List<Transaction>
<div>
    <a type="button" class="btn btn-primary" asp-action="Create" asp-controller="Transaction">Create</a>
    <table class="table table-striped table-bordered text-center mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creat date</th>
                <th>Category name</th>
                <th>Sum</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Id</td>
                    <td>@transaction.Category.Name</td>
                    <td>@transaction.Sum.ToString("N0")</td>
                    <td>@transaction.Comment</td>
                </tr>
            }
        </tbody>
    </table>
</div>